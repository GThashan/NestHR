generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  iD Int @default(autoincrement()) @id
  userName String @unique
  displayName String? @default("")
}

model UserSetting{
  iD Int @default(autoincrement()) @id
  notificationOn Boolean
  smsEnable Boolean

}

model Post {
  id Int @default(autoincrement()) @id
  title String
  description String
}
